---
import resume from '../../public/karel-leorier.json';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<footer>
		<div id="footer-top">
			<a href="#">Download as PDF</a>
			<a href="/karel-leorier.json">Download as JSON Resume format</a>
		</div>
		<div id="subfooter">
			&copy; {resume.basics.name} - All rights reserved | Made with <a href="https://astro.build" target="_blank">Astro</a> | Accessibility friendly
		</div>
	</footer>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--page-width: 60ch
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	main {
		margin: auto;
		padding: 1.5rem;
		padding-bottom: 0;
		max-width: var(--page-width);
	}
	footer {
		color: #444;
		margin: auto;
		max-width: var(--page-width);
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	footer #footer-top{
		width: 100%;
		flex-direction: row;
		display: flex;
		justify-content: space-evenly;
		padding: 0.3rem;
	}
	footer #subfooter {
		font-size: small;
	}
	footer a {
		color: #444;
		text-decoration: none;
		padding: 0.3rem;
	}
	footer a:hover {
		cursor: pointer;
		text-decoration: underline;
	}
	.text-gradient, footer a:hover {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
